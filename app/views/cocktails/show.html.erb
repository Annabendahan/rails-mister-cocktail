
<h1><%= @cocktail.name.upcase %>  DETAILS </h1>


<h2> <%= @cocktail.name %> </h2>

<div class="cocktail">

<div class="show-image">
<%= image_tag("https://images.unsplash.com/photo-1438522014717-d7ce32b9bab9?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=55cb1a59dd5a3cecf474342bc3048ea7&auto=format&fit=crop&w=500&q=60", {:style => "width:500px;height:300px;"}) %> </div>


<div class="show-desc">
<% @cocktail.doses.each do |dose| %>


<p> - <%= dose.description %>  of <%=dose.ingredient.name %>
- <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, dose_path(dose),
      method: :delete,
      data: { confirm: "Are your sure you want to delete this dose? " } %></p>
<% end %>

</div>

</div>


<p> <%= link_to "Add a dose" '<i class="fas fa-plus"></i>'.html_safe, new_cocktail_dose_path(@cocktail) %> </p>

